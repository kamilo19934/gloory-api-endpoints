# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# Para desarrollo local: usar SQLite
# Para producción: usar PostgreSQL (Railway/Render)

# Opción 1: SQLite (Desarrollo)
DATABASE_TYPE=sqlite
DATABASE_PATH=./database.sqlite

# Opción 2: PostgreSQL (Producción)
# DATABASE_TYPE=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=postgres
# DATABASE_PASSWORD=tu-password
# DATABASE_NAME=gloory_db
# DATABASE_SSL=false

# Opción 3: PostgreSQL con URL (Railway/Render genera esto automáticamente)
#DATABASE_TYPE=postgres
#DATABASE_URL=postgresql://postgres:yEYUprBDejZQDXLtUgpRZRKtATARZCiL@postgres.railway.internal:5432/railway
#DATABASE_SSL=true  # Railway/Render requieren SSL

# Opcional: Habilitar sincronización en producción (solo usar una vez para crear tablas)
# DB_SYNC=true

# Nota: La configuración de pool de conexiones está en app.module.ts
# - max: 20 conexiones simultáneas
# - connectionTimeoutMillis: 10000 (10s)
# - idleTimeoutMillis: 30000 (30s)
# - statement_timeout: 30000 (30s)





# CORS
CORS_ORIGIN=http://localhost:3000

# Dentalink API Base URL (opcional - el sistema ya tiene las URLs correctas configuradas)
